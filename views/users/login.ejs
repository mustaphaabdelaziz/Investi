<% layout('layouts/boilerplate')%>
<div class="container">
  <div class="card my-5">
    <div class="row">
      <div class="col-12">
        <div class="d-flex flex-column align-items-center my-5">
          <a href="/">
            <img src="/assets/logo.png" alt="" height="100px" />
          </a>
        </div>
      </div>
      <div class="col-12">
        <ul class="nav nav-tabs" role="tablist">
          <li class="nav-item">
            <button
              id="userLoginTab"
              data-bs-target="#userLoginForm"
              data-bs-toggle="tab"
              role="tab"
              class="nav-link active"
              aria-controls="userLoginForm"
              aria-selected="true"
            >
              <%= t('login') %> <i class="bi bi-box-arrow-in-right"></i>
            </button>
          </li>
          <li class="nav-item">
            <button
              id="userRegisterTab"
              data-bs-target="#userRegisterForm"
              data-bs-toggle="tab"
              role="tab"
              class="nav-link"
              aria-controls="userRegisterForm"
              aria-selected="false"
            >
              <%= t('register') %> <i class="bi bi-person-plus-fill"></i>
            </button>
          </li>
        </ul>
      </div>
    </div>
    <div class="row">
      <div class="tab-content">
        <div
          aria-labelledby="userLoginTab"
          role="tabpanel"
          class="px-5 my-5 tab-pane fade active show"
          id="userLoginForm"
        >
          <h3 class="my-5 text-center text-primary"><%= t('login') %></h3>
          <form action="/users/login" method="POST">
            <div class="mb-3">
              <label for="userLoginEmail" class="form-label"
                ><%= t("email") %>
              </label>
              <input
                type="email"
                class="form-control"
                name="username"
                id="userLoginEmail"
                placeholder="name@example.com"
                style="text-transform: lowercase"
                required
              />
            </div>
            <div class="mb-3">
              <label for="userLoginPassword" class="form-label"
                ><%= t("password") %></label
              >
              <input type="password" class="form-control" id="userLoginPassword"
              name="password" placeholder="<%= t("password") %>">
            </div>
            <div class="mb-3 text-center">
              <button type="submit" id="user-submit" class="btn btn-primary">
                <%= t("login") %> <i class="bi bi-box-arrow-in-right"></i>
              </button>
            </div>
          </form>
        </div>
        <!-- ============================= Register =============================================== -->
        <div
          aria-labelledby="userRegisterTab"
          role="tabpanel"
          class="px-5 my-5 tab-pane fade"
          id="userRegisterForm"
        >
          <h3 class="my-5 text-center text-primary"><%= t('register') %></h3>
          <form
            class="row g-3"
            action="/users/register"
            id="personal"
            method="POST"
            class="needs-validation"
            enctype="multipart/form-data"
            novalidate
          >
            <div class="col-md-6">
              <label for="userFirstName" class="form-label"
                ><%= t('firstname') %></label
              >
              <input
                id="userFirstName"
                name="user[firstname]"
                placeholder="<%= t('firstname') %>"
                type="text"
                class="form-control"
                required
              />
            </div>
            <div class="col-md-6">
              <label for="userLastName" class="form-label"
                ><%= t('lastname') %></label
              >
              <input
                id="userLastName"
                name="user[lastname]"
                type="text"
                placeholder="<%= t('lastname') %>"
                class="form-control"
                required
              />
            </div>

            <div class="col-md-6">
              <label for="userBirthDate" class="form-label"
                ><%= t('birthdate') %>
              </label>
              <input
                id="userBirthDate"
                name="user[birthday]"
                placeholder="<%= t('birthdate') %>"
                type="date"
                class="form-control"
                required
              />
            </div>
            <div class="col-md-6">
              <label for="userGender" class="form-label"
                ><%= t('gender') %></label
              >
              <select
                id="userGender"
                name="user[gender]"
                class="form-select"
                required
              >
                <option selected disabled><%= t('gender') %></option>
                <option class="option" value="Male"><%= t('male') %></option>
                <option class="option" value="Female">
                  <%= t('female') %>
                </option>
              </select>
            </div>

            <div class="col-md-6">
              <label for="userCity" class="form-label">Wilaya</label>
              <select
                id="userCity"
                name="user[city]"
                class="form-select"
                required
              >
                <option selected disabled value=""><%= t('select') %></option>
                <% for (city of states) { %>
                <option value="<%= city.name %>">
                  <%= city.id + " - " + city.name %>
                </option>
                <%} %>
              </select>
            </div>
            <div class="col-md-6">
              <label for="userEmail" class="form-label"
                ><%= t('email') %></label
              >
              <input
                id="userEmail"
                placeholder="name@example.com"
                name="user[email]"
                type="email"
                class="form-control"
                required
              />
            </div>
            <div class="col-md-6">
              <label for="userPassword" class="form-label"
                ><%= t('password') %></label
              >
              <input
                id="userPassword"
                placeholder="<%= t('password') %>"
                type="password"
                class="form-control"
                name="user[password]"
                required
              />
            </div>
            <div class="col-md-6">
              <label for="confirmedPassword" class="form-label"
                ><%= t('confirmedPassword') %></label
              >
              <input
                id="confirmedPassword"
                placeholder="<%= t('confirmedPassword') %>"
                type="password"
                class="form-control"
                name="user[confirmedPassword]"
                required
              />
            </div>

            <div class="col-md-6">
              <label for="userPhoneNumber" class="form-label"
                ><%= t('phone') %></label
              >
              <input
                type="text"
                class="form-control"
                id="userPhoneNumber"
                placeholder="<%= t('phone') %>"
                name="user[phone]"
                required
              />
            </div>
            <div class="col-md-6">
              <label for="userJobTitle" class="form-label"
                ><%= t('job') %></label
              >
              <input
                type="text"
                class="form-control"
                name="user[job]"
                id="inputAddress2"
                placeholder="<%= t('job') %>"
                required
              />
            </div>
            <div class="col-md-12">
              <label for="userProfilePicture" class="form-label"
                ><%= t('profile') %> <%= t('picture') %></label
              >
              <input
                id="userProfilePicture"
                class="form-control"
                type="file"
                name="picture"
                required
              />
            </div>
            <div class="mb-3 text-center">
              <button type="submit" id="user-register" class="btn btn-primary">
                <%= t("register") %> <i class="bi bi-person-plus-fill"></i>
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
