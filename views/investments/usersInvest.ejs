<% layout('layouts/boilerplate')%>
<div class="container">
  <h1>User Investments Status</h1>
  <input
    type="text"
    id="myInput"
    onkeyup="searchUser()"
    placeholder="search for User "
  />
  <table
    class="table table-striped table-hover align-middle sortable shadow-sm"
    id="myTable"
  >
    <thead>
      <tr>
        <th class="table-dark text-center" scope="col">#</th>
        <th class="table-dark text-center" scope="col">
          <%= t("firstname") %>
        </th>
        <th class="table-dark text-center" scope="col"><%= t("lastname") %></th>
        <th class="table-dark text-center" scope="col">Pack</th>
        <th class="table-dark text-center" scope="col">State</th>
        <th class="table-dark text-center" scope="col">Date</th>
        <th class="table-dark text-center" scope="col">Payment Method</th>
        <th class="table-dark text-center" scope="col">Payment receipt</th>
        <th class="table-dark text-center" scope="col"><%= t("action") %></th>
      </tr>
    </thead>
    <tbody>
      <%-include("./components/details")%>
    </tbody>
  </table>
</div>
